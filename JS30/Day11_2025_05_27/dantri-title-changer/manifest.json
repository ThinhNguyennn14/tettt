{
    "manifest_version": 3,
    "name": "Dân Trí Text Changer (Lite)",
    "version": "1.0.2",
    "description": "Thay đổi một số tiêu đề trên trang dantri.com.vn thành văn bản tùy chỉnh.",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "*://dantri.com.vn/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "*://dantri.com.vn/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_title": "Dân Trí Text Changer"
    }
}